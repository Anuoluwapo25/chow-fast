{
  "name": "chow-fast",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Fast food ordering on Arbitrum blockchain with Stylus smart contracts",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "contract:build": "cd contracts/stylus && cargo build --release --target wasm32-unknown-unknown",
    "contract:check": "cd contracts/stylus && cargo stylus check",
    "contract:export-abi": "cd contracts/stylus && ./scripts/export-abi.sh",
    "contract:deploy:sepolia": "cd contracts/stylus && ./scripts/deploy.sh sepolia",
    "contract:deploy:mainnet": "cd contracts/stylus && ./scripts/deploy.sh mainnet"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@reown/appkit": "^1.8.13",
    "@reown/appkit-adapter-ethers": "^1.8.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ethers": "^6.13.0",
    "lucide-react": "^0.552.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
